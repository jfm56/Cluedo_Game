# Use official Python image
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Copy requirements first to leverage Docker cache
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt pylint pytest-cov

# Copy the rest of the application
COPY . .

# Set environment variable to ensure we're in test mode
ENV PYTHONPATH=/app

# Default command to run tests with coverage and pylint
CMD ["sh", "-c", "pylint cluedo_game/ tests/ && \
    pytest --cov=cluedo_game --cov-report=term-missing --cov-report=xml:coverage.xml -v"]
